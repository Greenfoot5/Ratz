<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="profileSelectionRoot" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" stylesheets="@menu.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MenuController">
   <left>
      <VBox fx:id="profileButtons" alignment="CENTER" prefHeight="282.0" prefWidth="136.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="l1" prefHeight="147.0" prefWidth="170.0" text="Loading buttons..." />
         </children>
      </VBox>
   </left>
   <right>
      <VBox alignment="CENTER" prefHeight="300.0" prefWidth="165.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#changeToMenu" text="Main menu" />
            <Button fx:id="removeProfileButton" mnemonicParsing="false" onAction="#removeProfile" text="Remove Profile" />
         </children>
      </VBox>
   </right>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Add new profile:" />
            <TextField fx:id="newProfileTextField" promptText="new profile name" />
            <Button fx:id="addProfilebutton" mnemonicParsing="false" onAction="#addProfile" prefHeight="39.0" prefWidth="93.0" text="Add" />
         </children>
      </HBox>
   </bottom>
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="profileLabel" text="Best " />
            <Label fx:id="loggedProfileLabel" styleClass="profileLabel" text="..." />
            <Label styleClass="profileLabel" text="'s scores: " />
         </children>
      </HBox>
   </top>
   <center>
      <VBox fx:id="profileScoresVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Loading scores..." />
         </children></VBox>
   </center>
</BorderPane>
